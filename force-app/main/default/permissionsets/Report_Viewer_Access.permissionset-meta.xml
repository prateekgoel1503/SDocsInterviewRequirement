<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants access to Report Viewer components and Error Log object</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Report Viewer Access</label>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Error_Log__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.Component_Name__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.Method_Name__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.Error_Message__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.Stack_Trace__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.Log_Level__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Error_Log__c.User_Id__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ReportViewerController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>LoggerUtil</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <!-- Visualforce Page Access -->
    <pageAccesses>
        <apexPage>ReportViewerPage</apexPage>
        <enabled>true</enabled>
    </pageAccesses>
</PermissionSet>
